@page "/SummaryReport"
@inherits SummaryReportBase

@if (!isDataReady)
{
    <span>Loading ...</span>
}
else
{


    <div class="row">
        <div class="pr-1 col-lg-3 pb-2">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Products</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Stock: @product.Products</h6>
                </div>
            </div>
        </div>


        <div class="pr-1 col-lg-3 pb-2">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Total In Stock</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Stock: @product.ProductsInStock</h6>
                </div>
            </div>
        </div>

        <div class="pr-1 col-lg-3 pb-2">
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h5 class="card-title">Total Sold</h5>
                    <h6 class="card-subtitle mb-2 text-muted">Stock: @product.SoldItems</h6>
                </div>
            </div>
        </div>

    </div>


}



